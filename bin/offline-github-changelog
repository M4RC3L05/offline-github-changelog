#!/usr/bin/env node
const { execSync } = require('child_process');

const cli = require('meow')(
  `
  Usage
    $ offline-github-changelog

  Options
    --remote, -r  Specify the remote
    --next        Specify the version about to be released
    --commits, -c Specify the number of commits to show per release (default: 5)

  Examples
    $ offline-github-changelog > CHANGELOG.md
    $ offline-github-changelog --commits 3 > CHANGELOG.md
    $ offline-github-changelog --commits -1 > CHANGELOG.md // Pass a negative value to show all commits per release
    $ offline-github-changelog --remote=myremote > CHANGELOG.md
    $ offline-github-changelog --next=1.2.4 > CHANGELOG.md
`,
  {
    flags: {
      remote: {
        type: 'string',
        alias: 'r',
        default: 'origin',
      },
      next: {
        type: 'string',
      },
      commits: {
        type: 'number',
        alias: 'c',
        default: 5,
      },
    },
  },
);

const currentBranch = execSync('git rev-parse --abbrev-ref HEAD')
  .toString()
  .trim();

const { printMarkdownChangelog } = require('../lib/index');
const { remote, next, commits } = cli.flags;

try {
  printMarkdownChangelog({
    originName: remote,
    nextVersion: next,
    numberCommits: commits,
    currentBranch,
  }).catch((e) => {
    console.error(e);
    process.exit(1);
  });
} catch (e) {
  console.error(e);
  process.exit(1);
}
